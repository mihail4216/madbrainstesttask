<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/_avatarUser"
                android:layout_width="90dp"
                android:layout_margin="16dp"
                android:layout_height="90dp"/>

        <TextView
                android:id="@+id/_nameUser"
                android:layout_toRightOf="@+id/_avatarUser"
                style="@style/text_style"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:id="@+id/containerDescription"
                android:layout_below="@+id/_avatarUser"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/_nameRepository"
                    android:textSize="18sp"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/_descriptionRepository"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/_languageRepository"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    style="@style/text_style"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/_forkRepository"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    style="@style/text_style"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/_starsRepository"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    style="@style/text_style"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/_commitsRepository"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    style="@style/text_style"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/_listCommits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>