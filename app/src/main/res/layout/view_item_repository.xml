<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginVertical="4dp"
              android:elevation="3dp"
              android:layout_marginHorizontal="2dp"
              android:background="#fff"
>

    <TextView
            android:id="@+id/_nameRepository"
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/_descriptionRepository"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/_languageRepository"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/_descriptionRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/_forkRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/_starsRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/_commitsRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/_btnAddFavorites"
            android:layout_width="24dp" android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
    />

</LinearLayout>